<div class="row">
  <div class="col-md-10 col-md-offset-2">
    <h2>Sign Up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { :class => "form-horizontal"}) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.label :first_name, class: "col-sm-2 control-label" %>
        <%= f.text_field :first_name, autofocus: true, size: 35 %>
      </div>

      <div class="form-group">
        <%= f.label :last_name, class: "col-sm-2 control-label" %>
        <%= f.text_field :last_name, autofocus: true, size: 35 %>
      </div>

      <div class="form-group">
        <%= f.label :email, class: "col-sm-2 control-label" %>
        <%= f.email_field :email, autofocus: true, size: 35 %>
      </div>

      <div class="form-group">
        <%= f.label :password, class: "col-sm-2 control-label" %>
        <%= f.password_field :password, autocomplete: "off", size: 35, placeholder: "#{@minimum_password_length} character minimum" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, class: "col-sm-2 control-label" %>
        <%= f.password_field :password_confirmation, autocomplete: "off", size: 35   %>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2">
          <%= f.submit "Sign up", :class => "btn btn-primary" %>
        </div>
      </div>
    <% end %>

    <div class="col-md-offset-2">    
      <%= render "users/shared/links" %>
    </div>
  </div>
</div>
