<table class="table">
  <thead>
    <tr>
      <th><%= I18n.t :title %></th>
      <th><%= I18n.t :description %></th>
      <th><%= I18n.t :start_date %></th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.title %></td>
        <td><%= project.description %></td>
        <td><%= I18n.l project.start_date %></td>
        <td><%= link_to "#{I18n.t :show}", project %></td>
        <td><%= link_to "#{I18n.t :edit}", edit_project_path(project) %></td>
        <td><%= link_to "#{I18n.t :topics}", list_topics_project_path(project) %></td>
        <td><%= link_to "#{I18n.t :destroy}", project, method: :delete, data: { confirm: "#{I18n.t :areyousure}" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
